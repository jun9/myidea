<div class="row">
  <div class="span6 offset3">
    <%= errors_msg_tag resource %>
	<h2>修改密码</h2>
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put,:class=>"well" }) do |f| %>
      <%= f.hidden_field :reset_password_token %>
      <%= f.label :password,"新密码"%>
      <%= f.password_field :password,:class=>"span4"%>
      <%= f.label :password_confirmation,"确认新密码" %>
      <%= f.password_field :password_confirmation,:class=>"span4"%>
      <label></label>
      <%= f.submit "修改密码",:class=>"btn btn-large btn-primary" %>
    <% end -%>
    <%= render "links" %>
  </div>
</div>
