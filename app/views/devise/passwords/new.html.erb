<div class="row">
  <div class="span6 offset3">
    <%= errors_msg_tag resource %>
	<h2>忘记密码</h2>
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post,:class=>"well" }) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email,:class=>"span4"%>
      <label></label>
      <%= f.submit "重设密码",:class=>"btn btn-large btn-primary" %>
    <% end -%>
    <%= render "links" %>
  </div>
</div>
