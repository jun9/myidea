<div class="row">
  <div class="span8 offset2">
  <%= errors_msg_tag resource %>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name),:html => {:class => "form-horizontal" }) do |f| %>
    <fieldset>
	  <legend>注册账号</legend>
	  <div class="control-group">
	    <%= f.label :email,:class=>"control-label" %>
	    <div class="controls">
		  <div class="input-prepend">
			<span class="add-on"><i class="icon-envelope"></i></span>
            <%= f.email_field :email,:class=>"span3" %>
		  </div>
		  <p class="help-block">填写正确的邮箱地址</p>
		</div>
	  </div>
	  <div class="control-group">
	    <%= f.label :username,:class=>"control-label" %>
		<div class="controls">
		  <div class="input-prepend">
			<span class="add-on"><i class="icon-user"></i></span>
            <%= f.text_field :username,:class=>"span3" %>
		  </div>
		  <p class="help-block">长度为3到14位，由字母和数字组成</p>
		</div>
	  </div>
	  <div class="control-group">
        <%= f.label :password,:class=>"control-label" %>
		<div class="controls">
		  <div class="input-prepend">
			<span class="add-on"><i class="icon-lock"></i></span>
            <%= f.password_field :password,:class=>"span3" %>
		  </div>
		  <p class="help-block">长度至少为6位</p>
		</div>
	  </div>
	  <div class="control-group">
        <%= f.label :password_confirmation,:class=>"control-label" %>
		<div class="controls">
		  <div class="input-prepend">
			<span class="add-on"><i class="icon-lock"></i></span>
            <%= f.password_field :password_confirmation,:class=>"span3" %>
		  </div>
		</div>
	  </div>
	  <div class="control-group">
		<div class="controls">
		  <label class="checkbox">
            <%= f.check_box :terms_of_service%> 同意<a href="#">《网站使用协议》</a>
		  </label>
		  <p class="help-block"><strong>提示:</strong>同意《网站使用协议》才能注册成功。</p>
		</div>
	  </div>
	  <div class="form-actions">
        <%= f.submit "注册账号",:class=>"btn btn-large btn-primary" %>
	  </div>
	</fieldset>
  <% end %>
  </div>
</div>
