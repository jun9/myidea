<div class="title"><span class="t2">注册账号</span></div>
<div>
<%= form_for(@user) do |f| %>
  <%= errors_msg_tag(@user) %>
  <div class="item">
    <%= f.label :email,:class => "text" %>
    <%= f.email_field :email,:class => "text" %>
  </div>

  <div class="item">
    <%= f.label :username,:class => "text" %>
    <%= f.text_field :username,:class => "text" %>
  </div>

  <div class="item">
    <%= f.label :password,:class => "text" %>
    <%= f.password_field :password,:class => "text" %>
  </div>

  <div class="item">
    <%= f.label :password_confirmation,:class => "text" %>
    <%= f.password_field :password_confirmation,:class => "text" %>
  </div>
  
  <div class="item">
    <label class="text">&nbsp;</label>
    <%= f.submit "注册",:id => "login" %>
  </div>
  <div class="item">
    <label class="text">&nbsp;</label>
    已有账号，点击&gt;&gt;<%= link_to "登录",login_path %>
  </div>
<% end %>
</div>
