<div class="title"><span class="t2">修改账号</span></div>
<div>
<%= form_for(@user) do |f| %>
  <%= errors_msg_tag(@user) %>
  <div class="item">
    <%= f.label :email,:class => "text" %>
    <%= f.email_field :email,:class => "text" %>
  </div>

  <div class="item">
    <%= f.label :username,:class => "text" %>
    <%= f.text_field :username,:class => "text" %>
  </div>

  <div class="item">
    <%= f.label :password,:class => "text" %>
    <%= f.password_field :password,:class => "text",:placeholder => "不修改密码，可不填写" %>
  </div>

  <div class="item">
    <%= f.label :password_confirmation,:class => "text" %>
    <%= f.password_field :password_confirmation,:class => "text",:placeholder => "不修改密码，可不填写" %>
  </div>

  <div class="item">
    <label class="text">&nbsp;</label>
    <%= f.submit "修改",:id => "login" %>
  </div>
<% end %>
</div>
