<!DOCTYPE html>
<html>
<head>
  <title>Myidea</title>
  <%= stylesheet_link_tag    "application","redmond/jquery-ui" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
    <body>
	<!-- begin of header -->
	<div id="header">
		<div class="content">
			<h1 class="logo">
				<a title="MyIdea Home" href="index.html"></a>
			</h1>
            <div>
			  <div id="welcome">
				  <span>你好</span>
                  <% if session[:login_user] %>
				    <span><%= session[:login_user].username %></span>
                    <span>,<%= link_to "退出",logout_path %></span>
                  <% else %>
                    <%= link_to "登录",login_path %>
					<span>发布评论</span>
                  <% end %>
			  </div>
              <div id="action">
                  <%= link_to new_idea_path do%>
                  <button id="pub-idea">发布Idea</button>
                  <% end %>
              </div><div class="clear"></div>
            </div>
		</div>
	</div>
	<!-- end of header -->

	<!-- begin of main -->
	<div id="main">
		<div class="content">
			<!-- begin of right -->
			<div class="col-a">
              <%= yield %>
			</div> 
			<!-- end of right -->
			<!-- begin of left -->
			<div class="col-b">
				<!-- begin of search -->
				<div class="search-panel">
					<form>
						<div class="search-panel-fields ">                    
							<input id="query" value="搜索Ideas">
						</div>
						<button type="button" id="searchBtn">GO</button>
					</form>
				</div>
				<!-- end of search -->
				<!-- begin of category -->
				<div class="partner-category"> 
					<ul>
                      <% Category.all.each do |category|%>
						<li><span><%= category.ideas.count %></span><%= link_to category.name,tab_ideas_path(:cate_id => category.id ),:class => 'cate_link',:remote => true %></li>
                      <% end %>
					</ul>
				</div>
				<!-- end of category -->
			</div>
			<!-- end of left -->
		</div>
	</div>
	<!-- end of main -->

	<!-- begin of footer -->
	<div id="footer">
		<div class="content">
		<ul id="nav3">
		<li> 
			<h5>公司信息</h5>
			<ul>
			<li><a target="_blank" href="#">关于我们</a></li>
			<li><a target="_blank" href="#">商业合作</a></li>
			<li><a target="_blank" href="#">联系我们</a></li>
			<li><a target="_blank" href="#">招贤纳士</a></li>
			</ul>
		</li>
		<li>
			<h5>社交门户</h5>
			<ul> 
			<li><a target="_blank" href="#">新浪微博</a></li>
			<li><a target="_blank" href="#">腾讯微博</a></li>
			<li><a target="_blank" href="#">新浪博客</a></li>
			<li><a target="_blank" href="#">优酷视频</a></li>
			</ul>
		</li>
		<li>
			<h5>其他链接</h5>
			<ul>
			<li><a target="_blank" href="#">客户服务</a></li>
			<li><a target="_blank" href="#">FAQ</a></li>
			</ul>
		</li>
		<li>
			<h5>Powered By:</h5> 
			<ul>
			<li id="sf-link"><a target="_blank" href="#">jQueryui.com</a></li>
			</ul>
		</li>
		</ul>
		</div>
	</div>
	<!-- end of footer -->
    </body>
</html>
