    <div class="topbar">
      <div class="fill">
        <div class="container">
          <%= link_to Preference.find_by_name(PREFERENCE_SITE_NAME).value,root_path,:class =>"brand" %>
		<form action="" class="pull-left">
            <input class="x-large" type="text" placeholder="搜索主意">
            <button class="btn" type="submit">搜索</button>
          </form>
          <ul class="nav">
            <li class="active"><a href="#">主页</a></li>
            <% if can? :dashboard,Idea %>
              <li><%= link_to "控制面板",dashboard_path,:id => "dashboard" %></li>
            <% end %>
            <li><a href="#">帮助</a></li>
          </ul>
          <ul class="nav secondary-nav">
            <% if can? :logout,User %>
              <li data-dropdown="dropdown" class="dropdown">
                <a href="#" class="dropdown-toggle"><%= session[:login_user].username %></a>
                <ul class="dropdown-menu">
                  <li><%=link_to '设置',user_path(session[:login_user].id) %></li>
                  <li class="divider"></li>
                  <li><a href="#"><%= link_to "退出",logout_path %></a></li>
                </ul>
              </li>
            <% else %>
              <li><%= link_to "登录",login_path %></li>
              <li><%= link_to "注册",new_user_path %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>

