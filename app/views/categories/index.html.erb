<table class="tt">
  <tbody>
	<tr class="title">
	  <td>类别名称</td>
	  <td>主意数量</td>
	  <td>操作</td>
	</tr>
    <% @categories.each do |category| %>
      <tr>
		<td><%= category.name %></td>
		<td><%= category.ideas.count %></td>
		<td><%= link_to "删除",category,:method => :delete,:remote => true,:confirm => '确认删除？',:class => "cate-del" %><%= link_to "修改",'javascript:;',:class => "cate-edit",:id => "edit-cate-btn-#{category.id}" %></td>
	  </tr>
    <% end %>
      <tr id="cate-last">
		<td></td>
		<td></td>
		<td><button class="cate-add">添加</button></td>
	  </tr>
  </tbody>
</table>
