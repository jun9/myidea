<div class="title"><span class="ui-widget-header ui-corner-all">主意状态流转</span></div>
<div class="idea-edit">
  <div class="idea-content"> 
  <%= form_tag handle_idea_path(@idea) do %>
  <%= errors_msg_tag(@idea) %>
  <h2>
    <span><%= link_to @idea.title,@idea,:title => @idea.title %></span>
    <%= status_span_tag @idea %>
  </h2>
  <div class="info">类别:&nbsp;<%= @idea.category.name %></div>
  <div class="info">评分:&nbsp;<%= @idea.points %>&nbsp;&nbsp;评论:&nbsp;<%= @idea.comments_count %></div>
  <div class="info">发布于&nbsp;<%= l @idea.created_at,:format => :long %></div>
  <div class="info">由&nbsp;<%= @idea.user.username %></div>
  <div class="entry"><p><%= raw RedCloth.new(@idea.description,[:filter_html]).to_html %></p></div>
  <div class="idea-status">
    <div class="idea-all-status">
    <%= status_span_tag2 @idea,IDEA_STATUS_DEFAULT,"等待处理"%>
    <span class="arrow">开始审核</span>
    <%= status_span_tag2 @idea,IDEA_STATUS_UNDER_REVIEW,"审核中"%>
    <span class="arrow">完成审核</span>
    <%= status_span_tag2 @idea,IDEA_STATUS_REVIEWED,"已审核"%>
    <span class="arrow">开始实施</span>
    <%= status_span_tag2 @idea,IDEA_STATUS_IN_THE_WORKS,"实施中"%>
    <span class="arrow">完成实施</span>
    <%= status_span_tag2 @idea,IDEA_STATUS_LAUNCHED,"已实施"%>
    <div class="clear"></div>
    </div>
  </div>
  <%= handle_idea_tag(@idea) %> 
  <% end %>
  </div>
</div>

