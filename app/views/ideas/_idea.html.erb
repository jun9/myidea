<!-- begin of idea -->
<div style="margin-right:-3px;" class="idea">
  <!-- begin of vote -->
  <ul class="idea-vote">
    <li><h6>投票</h6></li>
    <li class="vote-btn">
      <%= like_button_tag "顶","vote-toggle",:like,idea %>
      <%= like_button_tag "踩","vote-toggle",:unlike,idea %>
	<li class="score">
	  <span>
	    <strong><%= idea.points %></strong><br>
		<small>分</small>
	  </span>
	</li> 
  </ul>
  <!-- end of vote -->
  <!-- begin of message -->
  <div class="imessage"> 
	<h2>
	  <span><%= link_to idea.title,idea,:title => idea.title %></span>
      <%= status_span_tag idea %>
	</h2>
	<div class="date">发布于&nbsp;<%= l idea.created_at,:format => :long %></div>
	<div class="username">由&nbsp;<%= link_to idea.user.username,user_path(idea.user) %></div>
    <div class="entry"><p><%= raw idea.description %></p></div>
	<ul class="actions">
      <% if idea.comments_count > 0 %>
	  <li class="comment"><%= link_to "评论[#{idea.comments_count}]",idea_path(idea,:anchor => "first") %></li>
      <% end %>
      <% if can? :create,Comment %>
	  <li class="write"><%= link_to "发表评论",idea_path(idea,:anchor => "comment-form") %></li>
      <% end %>
      <%= handle_idea_tag idea %>
	</ul> 
  </div>
  <!-- end of message -->
  <div class="clear"></div>
</div>
<!-- end of idea -->
