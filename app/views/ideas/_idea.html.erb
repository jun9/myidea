<div class="idea-box">
  <div class="row">
	<div class="span8">
	  <div class="idea-title"><%= link_to idea.title,idea,:title => idea.title %></div>
	  <div class="idea-tag">
      <% idea.tags.each do |tag| %>
        <%= link_to tag.name,'#',:class => "tag" %>
      <% end %>
      </div>
	  <div class="idea-info">由&nbsp;<%= link_to idea.user.username,user_path(idea.user) %>&nbsp;发布了&nbsp;<span class="date"><%= distance_of_time_in_words_to_now idea.created_at %></span></div>
	  <div class="idea-entry"><%= raw RedCloth.new(idea.description,[:filter_html]).to_html %></div>
	</div>
	<div class="span2">
	  <ul class="unstyled idea-action">
		<li><a href="#">修改</a></li>
	  </ul>
	</div>
  </div>
  <%= render idea.solutions %>
  <%= render idea.comments %>
  <div class="idea-button">
    <%= link_to "建议",idea_path(idea),:class =>"btn primary" %> 
    <% if can? :create,Comment %>
      <a href="javascript:;" class="comment-btn btn info">评论</a>
    <% end %>
    <% if can? :favoriate,idea %>
      <% if idea.favorers.exists?(session[:login_user].id) %>
	    <%= link_to "取消关注",unfavoriate_idea_path(idea),:remote => true,:id => "favor-link-#{idea.id}",:class=>"btn" %>
      <% else %>
	    <%= link_to "关注",favoriate_idea_path(idea),:remote => true,:id => "favor-link-#{idea.id}",:class=>"btn" %>
      <% end %>
    <% end %>
    <% if can? :handle,idea %>
      <% if idea.status != IDEA_STATUS_LAUNCHED %>
	    <%= link_to "实施",handle_idea_path(idea),:class=>"btn danger" %>
      <% end %>
    <% end %>
  </div>
  
  <div class="comment-form">
    <div class="alert-message block-message warning">
	  <a class="close" href="javascript:;">×</a>
      <%= form_for([idea,@comment],:remote => true,:html =>{:id => "comment-form-#{idea.id}"}) do |f| %>
		<fieldset>
		  <div class="clearfix">
            <%= f.label :content %>
		    <div class="input">
	          <%= f.text_area :content,:class => "xlarge",:style => "height:80px;overflow-y:auto" %>
            </div>
		  </div>
          <div class="actions">
            <%= f.submit "发布",:class=>"btn primary" %>
          </div>
		</fieldset>
	  <% end %>
    </div>
  </div>

</div>
